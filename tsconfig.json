{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "~/*": ["*"]
    },
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    "**/*"
  ],
  "exclude": [
    "node_modules",
    ".output",
    "dist"
  ]
}

